<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>

    <meta charset="UTF-8">
    <title> Dashboard </title>
    <meta name="author" content="Aaron Ayerdis Espinoza">

    <!-- Boxicons CDN Link -->
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

</head>


<!-- ------------ BODY ------------ -->

<body>

<!-- ------------ SIDE BAR ------------ -->

<div class="sidebar">

    <div class="logo-details">
        <i class='bx bxs-data'></i>
        <span class="logo_name">ATech</span>
    </div>

    <ul class="nav-links">

        <li>
            <a href="#" class="active">
            <i class='bx bx-grid-alt' ></i>
            <span class="links_name">Dashboard</span>
          </a>
        </li>

        <li>
            <a href="#">
            <i class='bx bx-pie-chart-alt-2' ></i>
            <span class="links_name">Analytics</span>
          </a>
        </li>

        
    </ul>

</div>


<!-- ------------ HOME SECTION ------------ -->

<section class="home-section">

    <nav>

        <div class="sidebar-button">
            <i class='bx bx-menu sidebarBtn'></i>
            <span class="dashboard">Dashboard</span>
        </div>

        <div class="search-box">
            <input type="text" placeholder="Search...">
            <i class='bx bx-search' ></i>
        </div>

    </nav>

        <!-- ------------ HOME CONTENT ------------ -->

<!-- ------------ BOXES FROM ABOVE ------------ -->

    <div class="home-content">
        <div class="overview-boxes">

            <div class="box">
                <div class="right-side">
                    <div class="box-topic"><%= @total_rent_header %></div>
                    <div class="number"><%= @total_rent %></div>
                    <div class="indicator">
                        <span class="text"><%= @type_rent_header %></span>
                    </div>
                </div>
                    <!-- <i class='bx bx-cart-alt cart'></i> -->
            </div>

            <div class="box">
                <div class="right-side">
                    <div class="box-topic"><%= @avg_rent_header %></div>
                    <div class="number"><%= @avg_rent %></div>
                    <div class="indicator">
                        <span class="text"><%= @type_rent_header %></span>
                    </div>
                </div>
            </div>


            <div class="box">
                <div class="right-side">
                    <div class="box-topic"><%= @total_sale_header %></div>
                    <div class="number"><%= @total_sale %></div>
                    <div class="indicator">
                        <span class="text"><%= @type_sale_header %></span>
                    </div>
                </div>
            </div>

            <div class="box">
                <div class="right-side">
                    <div class="box-topic"><%= @avg_sale_header %></div>
                    <div class="number"><%= @avg_sale %></div>
                    <div class="indicator">
                        <span class="text"><%= @type_sale_header %></span>
                    </div>
                </div>
            </div>

        </div>

        <!-- ------------ MAIN BOXES ------------ -->

<!-- ------------ GRAPHICS ------------ -->
        <div class="real-estate-boxes">

            <div class="real-estate-info box">

                <div class="title">Graphics</div>

                <div class="real-estate-details">

                    <ul class="details">
                        <li class="topic">Date</li>
                                <% for i in 0..9 do %>
                                    <li><a href="#"><%= "#{i+10} Mar 2021" %></a></li>
                                <% end %>
                    </ul>

                    <ul class="details">
                        <li class="topic">Customer</li>
                            <% for i in 0..9 do %>
                                    <li><a href="#"><%= "Aaron Ayerdis" %></a></li>
                            <% end %>            
                    </ul>

                    <ul class="details">
                        <li class="topic">Sales</li>
                            <% for i in 0..9 do %>
                                    <li><a href="#"><%= "Pending" %></a></li>
                            <% end %>
                    </ul>

                    <ul class="details">
                        <li class="topic">Total</li>
                            <% for i in 0..9 do %>
                                <li><a href="#"><%= "$000.00" %></a></li>
                            <% end %>
                    </ul>

                </div>

                <div class="button">
                    <a href="#">See Others</a>
                </div>
            </div>

<!-- ------------ TOP WORDS ------------ -->
            <div class="top-words box">

                <div class="title">Top Words</div>
                <ul class="top-words-details">

                    <li>
                        <a href="#">
                            <!-- <img src="images/photo?.jpg" alt=""> -->
                            <span class="word">Word 1</span>
                        </a>
                        <span class="times">N Times</span>
                    </li>
                
                    <li>
                        <a href="#">
                            <span class="word">Word 2 </span>
                        </a>
                        <span class="times">N Times</span>
                    </li>

                    <li>
                        <a href="#">
                            <span class="word">Word 3</span>
                        </a>
                        <span class="times">N Times</span>
                    </li>

                    <li>
                        <a href="#">
                            <span class="word">Word 4</span>
                        </a>
                        <span class="times">N Times</span>
                    </li>

                    <li>
                        <a href="#">
                            <span class="word">Word 5</span>
                        </a>
                        <span class="times">N Times</span>
                    </li>

                    <li>
                        <a href="#">
                            <span class="word">Word 6</span>
                        </a>
                        <span class="times">N Times</span>
                    </li>

                    <li>
                        <a href="#">
                            <span class="word">Word 7</span>
                        </a>
                        <span class="times">N Times</span>
                    </li>

                    
                </ul> <!-- ul class="top-words-details" -->

            </div> <!-- div class="top-words box" -->

        </div> <!-- div class="real-estate-boxes" -->

    </div> <!-- div class="home-content" -->

</section> <!-- section class="home-section" -->


        <!-- ------------ JAVASCRIPT ------------ -->

<!-- ------------ SIDE BAR ------------ -->
<script>

    let sidebar = document.querySelector(".sidebar");
    let sidebarBtn = document.querySelector(".sidebarBtn");
    sidebarBtn.onclick = function() {

        sidebar.classList.toggle("active");
        if(sidebar.classList.contains("active")) {

            sidebarBtn.classList.replace("bx-menu" ,"bx-menu-alt-right");
        } else
            sidebarBtn.classList.replace("bx-menu-alt-right", "bx-menu");
    }

 </script>


 

 